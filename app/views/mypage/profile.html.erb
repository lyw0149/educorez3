<div class="container">
	<% if !flash[:alert].nil? %>
	<div class="alert alert-danger">
		<%= flash[:alert] %>
	</div>
	<% end %>
	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-4 text-center" style="margin-top : 40px;">
			<h3 class="form-heading">Edit User</h3>
				<%= form_tag("profile_complete", method: "post", multipart: true ,class: "dropzone", id: "my_dropzone") do %>
			 		<div class="fallback">
						<%= image_tag(@user.image.url(:medium), size: "150x150") %>
						<%= hidden_field_tag(:id, @user.id) %>
						<%= file_field_tag(:image) %><br>
						<p>이름 :<%= text_field_tag(:name, @user.name) %></p>
						<p>이메일 :<%= text_field_tag(:email, @user.email) %></p>
						<%= submit_tag ("업로드") %><br>
					</div>
				<% end %>
		</div>
		<div class="col-md-4">
		</div>
	</div>
</div>
