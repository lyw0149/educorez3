<div class="container">
	<div class="row">
		<div class="col-md-3">
		</div>
			<div class="col-md-6 text-center">
			<h3 class="form-heading">Edit User</h3>
				<div class="profile_table_wrapper">
					<%= form_tag("profile_complete", multipart: true) do %>
							<%= image_tag(@user.image.url(:medium), size: "150x150") %>
							<%= hidden_field_tag(:id, @user.id) %>
							<%= file_field_tag(:image, style: "float: center;") %><br>
								<table class="profile_table">
									<tr>
										<td><p>이름 :	</p></td>
										<td><%= text_field_tag(:name, @user.name) %><br></td>
									</tr>
									<tr>
										<td><p> 이메일 :	</p></td>
										<td><%= text_field_tag(:email, @user.email) %><br></td>
									</tr>
									<tr>
										<td><p>주소 :	</p></td>
										<td><%= text_field_tag(:address, @user.address ,class: "postcodify_address", size: 30, maxlength: 50,readonly: true) %></td><td><span id="postcodify_search_button"> 주소검색</span></td>
									</tr>
									<tr>
										<td><p>(상세주소) :	</p></td>
										<td><%= text_field_tag(:extra_address, @user.extra_address, size: 30, maxlength: 50) %></td>
									</tr>
								</table>
							<%= submit_tag ("확인") %><br>
							<script> $(function() { $("#postcodify_search_button").postcodifyPopUp(); }); </script>
					<% end %> 
				</div>
			</div>
		<div class="col-md-3">
		</div>
	</div>
</div>
